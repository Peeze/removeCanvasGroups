{

  "manifest_version": 2,
  "name": "Remove Canvas Groups",
  "version": "0.1",

  "description": "Removes selected Canvas Groups from the sidebar.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "guy@example.com"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["removeCanvasGroups.js"]
    }
  ]

}
